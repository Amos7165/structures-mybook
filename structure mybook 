

#include <stdio.h>


struct book {
    char title[30];
    char author[30];
    int publicationYear;
    char ISBN[13];
    float price;
};

int main() {
    
    struct book myBook = {
        "Introduction to C Programming",
        "John Smith",
        2022,
        "9780131103627",
        49.99
    };

    //  Print the values of the fields
    
    printf("Title: %s\n", myBook.title);
    printf("Author: %s\n", myBook.author);
    printf("Publication Year: %d\n", myBook.publicationYear);
    printf("ISBN: %s\n", myBook.ISBN);
    printf("Price: %.2f\n", myBook.price);

    //  Prompt the user to enter values 
    
    printf("Title: ");
    scanf (userBook.title, 30, stdin);
    printf("Author: ");
    scanf (userBook.author, 30, stdin);
    printf("Publication Year: ");
    scanf("%d", &userBook.publicationYear);
    
    printf("ISBN: ");
    scanf (userBook.ISBN, 13, stdin);
    printf("Price: ");
    scanf("%f", &userBook.price);

    // Print the values entered 
    
    printf("Title: %s", userBook.title);
    printf("Author: %s", userBook.author);
    printf("Publication Year: %d\n", userBook.publicationYear);
    printf("ISBN: %s", userBook.ISBN);
    printf("Price: %.2f\n", userBook.price);

    return 0;
}
